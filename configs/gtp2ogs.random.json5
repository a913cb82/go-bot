{
    // OGS Bot API Key
    apikey: "YOUR_API_KEY_HERE",

    // Bot configuration
    bot: {
        command: ["python3", "scripts/random_gtp.py"],

        // "pool" manager runs a fixed number of processes (instances) and reuses them.
        // This is extremely efficient. 2 instances can easily handle 100+ active games
        // because the random bot calculates moves instantly.
        manager: "pool",
        instances: 2,
    },

    allowed_board_sizes: "all",
    allowed_time_control_systems: ["byoyomi", "fischer", "simple"],

    // We can allow huge concurrency because the 2 pool workers will cycle through games instantly.
    allowed_blitz_settings: {
        concurrent_games: 50,
        simple: { per_move_time_range: [1, 60] },
        byoyomi: { main_time_range: [0, 600], period_time_range: [1, 60], periods_range: [1, 50] },
        fischer: { initial_time_range: [0, 600], max_time_range: [0, 1200], time_increment_range: [1, 60] },
    },

    allowed_live_settings: {
        concurrent_games: 100,
        simple: { per_move_time_range: [1, 3600] },
        byoyomi: { main_time_range: [0, 7200], period_time_range: [1, 300], periods_range: [1, 50] },
        fischer: { initial_time_range: [0, 7200], max_time_range: [0, 10800], time_increment_range: [1, 300] },
    },

    allowed_rapid_settings: {
        concurrent_games: 100,
        simple: { per_move_time_range: [1, 1200] },
        byoyomi: { main_time_range: [0, 3600], period_time_range: [1, 120], periods_range: [1, 50] },
        fischer: { initial_time_range: [0, 3600], max_time_range: [0, 7200], time_increment_range: [1, 120] },
    },

    allowed_correspondence_settings: null,

    allow_ranked: true,
    allow_unranked: false,

    allowed_rank_range: ["30k", "9p"],
    allow_ranked_handicap: true,
    allowed_komi_range: [-100, 100],
    min_move_time: 0,

    // Logging
    verbosity: 0,
    log_game_chat: true,
}
